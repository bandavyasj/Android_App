<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context="com.sanjose.smarttongue.MainActivity"
    android:onClick="OnStart">

    <TextView
        android:id="@+id/value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Temperature"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/value2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value1"
        android:layout_centerHorizontal="true"
        android:text="Conductance"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/value3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value2"
        android:layout_centerHorizontal="true"
        android:text="Salinity"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START/RESET"
        android:id="@+id/startbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:onClick="OnStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tstatus"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />





    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:minHeight="5dip"
        android:layout_below="@+id/tstatus"
        android:maxHeight="5dip"
        android:minWidth="200dip"
        android:maxWidth="200dip"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#f8f0f0"
        android:backgroundTintMode="add"
        android:background="#faf6f6"
        android:progressDrawable="@drawable/progress_bar"
        />


</RelativeLayout>
